<h1>Projects Page</h1>
<% if @projects.empty? %>
  <div>You're not assigned to any projects yet.</div>
<% end %>
<% @projects.each do |project| %>
  <div><%= project.name %></div>
  <div><%= project.description %></div>
  <hr>
  <%= project.address.street %>
  <%= project.address.city %>
  <%= project.address.state %>
  <%= project.address.zip %>
  <hr>

  <%= link_to image_tag(project.image_url), project_path(project) %>
  <button><%= link_to "More info", project_path(project) %></button>
<% end %>

<% if current_user.admin? %>
  <button><%= link_to "Add New Project", new_project_path %></button>
<% end %>
