<div class="project">
  <%= link_to image_tag(project.image_url), project_path(project) %>
  <div class="text">
    <h1><%= project.name %></h1>
    <div class="address">
      <div><%= project.address.street %></div>
      <div><%= project.address.city %>, <%= project.address.state %> <%= project.address.zip %></div>
    </div>
    <div><%= project.description %></div>
  </div>
</div>
