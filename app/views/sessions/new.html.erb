<div class="center">
  <%= form_tag sessions_path do %>
    <%= label_tag :email, nil, class: "left" %>
    <%= text_field_tag :email, nil, placeholder: 'me@example.com' %>
    <%= label_tag :password, nil, class: "left" %>
    <%= password_field_tag :password, nil, placeholder: 'password' %>
    <%= submit_tag "Sign in" %>
  <% end %>
</div>
